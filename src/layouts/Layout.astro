---
import "../styles/global.css";
import Loader from "../components/Loader.astro";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Nightsky</title>

    <!-- Preload HarmonyOS Sans SC font -->
    <link
      rel="preload"
      href="https://db.onlinewebfonts.com/c/243710884e5ebac408cd10a7a89fcc96?family=HarmonyOS+Sans+SC"
      as="style"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://db.onlinewebfonts.com/c/243710884e5ebac408cd10a7a89fcc96?family=HarmonyOS+Sans+SC"
      crossorigin="anonymous"
    />

    <!-- Prevent Flash of Unstyled Content -->
    <style is:inline>
      .loading {
        visibility: hidden;
      }
    </style>
  </head>
  <body class="font-harmony bg-[#071F4D] w-full loading">
    <Loader />
    <main>
      <slot />
    </main>

    <script>
      // Remove loading class when fonts are loaded
      document.fonts.ready.then(() => {
        document.body.classList.remove("loading");
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  @font-face {
    font-family: "HarmonyOS Sans SC";
    src: url("https://db.onlinewebfonts.com/c/243710884e5ebac408cd10a7a89fcc96?family=HarmonyOS+Sans+SC")
      format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
